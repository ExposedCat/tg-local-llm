{
	"name": "ts-tg-bot",
	"version": "1.0.0",
	"description": "Telegram bot template in TypeScript ",
	"main": "build/index.js",
	"scripts": {
		"compile": "tsc",
		"postcompile": "cp -r src/locales build",
		"bg:start": "npm run prepare && pm2 start build/index.js --name telegram-bot",
		"bg:restart": "npm run prepare && pm2 restart telegram-bot",
		"bg:logs": "pm2 logs telegram-bot --lines 1000 -f",
		"start": "npm run compile && node .",
		"format": "biome format src/ --write; biome lint src/ --write"
	},
	"keywords": ["telegram", "bot", "grammy", "mongodb", "typescript"],
	"author": "ExposedCat",
	"license": "GPL-3.0-or-later",
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@grammyjs/i18n": "^1.0.2",
		"dotenv": "^16.0.1",
		"grammy": "^1.24.1",
		"mongodb": "^4.9.1",
		"ollama": "^0.5.8"
	},
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.8",
		"@types/node": "^20.14.15",
		"typescript": "^5.5.3"
	},
	"type": "module",
	"engines": {
		"node": ">=20",
		"npm": ">=10"
	}
}
