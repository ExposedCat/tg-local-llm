{
	"name": "tg-ollama",
	"version": "1.0.0",
	"description": "Run local LLMs using ollama with Telegram Bot UI",
	"main": "build/index.js",
	"scripts": {
		"build": "tsc && cp -r src/locales build",
		"start": "npm run build && node .",
		"format": "biome format src/ --write; biome lint src/ --write"
	},
	"keywords": [
		"telegram",
		"bot",
		"grammy",
		"mongodb",
		"typescript",
		"ai",
		"assistant",
		"llm",
		"ollama",
		"llama"
	],
	"author": "ExposedCat",
	"license": "GPL-3.0-or-later",
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@grammyjs/i18n": "^1.0.2",
		"dotenv": "^16.0.1",
		"grammy": "^1.24.1",
		"mongodb": "^4.9.1",
		"ollama": "^0.5.8",
		"puppeteer": "^24.1.0"
	},
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.8",
		"@types/node": "^20.14.15",
		"typescript": "^5.5.3"
	},
	"type": "module",
	"engines": {
		"node": ">=20",
		"npm": ">=10"
	}
}
